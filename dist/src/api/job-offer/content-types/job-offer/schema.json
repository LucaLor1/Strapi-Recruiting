{
    "kind": "collectionType",
    "collectionName": "job_offers",
    "info": {
        "singularName": "job-offer",
        "pluralName": "job-offers",
        "displayName": "JobOffer"
    },
    "options": {
        "draftAndPublish": true
    },
    "attributes": {
        "title": {
            "type": "text",
            "required": true
        },
        "description": {
            "type": "blocks",
            "required": true
        },
        "location": {
            "type": "string",
            "required": true
        },
        "salary": {
            "type": "decimal"
        },
        "published": {
            "type": "boolean",
            "default": false
        },
        "recruiter": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "plugin::users-permissions.user",
            "inversedBy": "jobOffers"
        },
        "applications": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::application.application",
            "mappedBy": "job_offer"
        }
    }
}
